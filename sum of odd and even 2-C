#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    int n;
    scanf("%d",&n);
    int a[5],i,esum,osum;
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    for(i=0,esum=0,osum=0;i<n;i++)
    {
        if (a[i]%2==0){
        esum=esum+a[i];
        }
        else{
        osum=osum+a[i];
        }
    }
    printf("%d\n",osum);
    printf("%d",esum);
    return 0;
}
